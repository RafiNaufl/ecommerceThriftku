<!DOCTYPE html>
<html>
<head>
    <title>Welcome!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        .custom-card {
            height: 100%;
            width: 95%;
            position: relative;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .custom-card:hover {
            transform: translateY(-5px); 
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .card {
            font-size: 13px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container mt-3">
            <a class="navbar-brand" href="/">
                <img src="" alt="Logo" width="200" height="70">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <form action="/products" method="GET" class="d-flex flex-grow-1">
                    <div class="input-group">
                        <input type="text" class="form-control" id="search" name="search" placeholder="search by title of product">
                        <button class="btn btn-outline-success" type="submit">Cari</button>
                    </div>
                </form>
                <ul class="navbar-nav ms-2">
                    <li class="nav-item">
                        <a href="/products/add"><button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#signInModal" style="margin-right: 5px;">
                            Add Product
                        </button></a>
                    </li>
                    <li class="nav-item">
                        <a href="/profile">
                            <button type="button" class="btn btn-outline-primary">
                                Profile
                            </button>
                        </a>
                    </li>
                    <li class="nav-item ms-1">
                        <a href="/logout">
                            <button type="button" class="btn btn-outline-danger">
                                Log Out
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h4 class="text-center mt-4 mb-3">All Secondhand Fashion Product</h4>

    <!-- Dropdown Filter Sort -->
    <div class="text-center mb-5">
        <div class="btn-group">
            <button type="button" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Sort by
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/low?low=low">Low Price</a></li>
                <li><a class="dropdown-item" href="/high?high=high">High Price</a></li>
            </ul>
        </div>
    </div>

    <!-- Card --> 
    <div class="container mt-6">
        <div class="row">
            <% products.forEach((el) => { %>
                <div class="col-md-3 col-12 mb-3">
                    <div class="card custom-card">
                        <a href="/products/<%= el.id %>" style="text-decoration:none; color: black;">
                        <img src="<%= el.photo %>" class="card-img-top" alt="<%= el.title %>">
                        <div class="card-body mb-2">
                            <h5 class="card-title" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"><%= el.title %></h5>
                            <p class="card-text">Size: <%= el.size %></p>
                            <h6 class="card-text">Harga: <%= currencyFormatter(el.price) %></h6>
                            <a href="/buy/<%= el.id %>"><button type="submit" class="btn btn-primary mt-4">Buy</button></a>
                            <a href="/products/edit/<%= el.id %>"><button type="submit" class="btn btn-warning mt-4">Edit</button></a>
                            <a href="/products/delete/<%= el.id %>"><button type="submit" class="btn btn-danger mt-4">Delete</button></a>
                        </div>
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            </ul>
            <p class="text-center text-body-secondary">Di Buat Dengan Cinta &copy; 2023</p>
        </footer>
    </div>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>
