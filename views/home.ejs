<!DOCTYPE html>
<html>
<head>
    <title>Welcome!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        .custom-card {
            height: 100%;
            width: 95%;
            position: relative;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .custom-card:hover {
            transform: translateY(-5px); 
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .card {
            font-size: 13px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container mt-3">
            <a class="navbar-brand" href="/">
                <img src="" alt="Logo" width="200" height="70">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <form action="/" method="GET" class="d-flex flex-grow-1">
                    <div class="input-group">
                        <input type="text" class="form-control" id="search" name="search" placeholder="Coba cari dia ...">
                        <button class="btn btn-outline-success" type="submit">Cari</button>
                    </div>
                </form>
                <ul class="navbar-nav ms-2">
                    <li class="nav-item">
                        <a href="/products/add"><button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#signInModal" style="margin-right: 5px;">
                            Add Product
                        </button></a>
                    </li>
                    <li class="nav-item">
                        <a href="/profile">
                            <button type="button" class="btn btn-outline-primary">
                                Profile
                            </button>
                        </a>
                    </li>
                    <li class="nav-item ms-1">
                        <a href="/logout">
                            <button type="button" class="btn btn-outline-danger">
                                Log Out
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Section Container -->
    <section class="container my-4" style="border-radius: 10px;">
        <div class="p-1 text-center bg-body-tertiary rounded-3">
            <div class="position-relative">
                <img src="https://images.pexels.com/photos/5865196/pexels-photo-5865196.jpeg" alt="" class="w-100 rounded-3" style="object-fit: cover; height: 400px; opacity: 0.8">
                <div class="position-absolute top-50 start-50 translate-middle text-white" style="margin-top: 90px;">
                    <h5 class="display-4">Welcome To ThriftKu</h5>
                    <p class="lead">Your destination for stylish fashion.</p>
                    <a href="/products">
                        <button class="btn btn-warning btn-lg px-4 rounded-pill">Shop Now</button>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Card Kategori -->
    <div class="container mt-6">
        <h3 class="text-center mb-3">Daftar Kategori</h3>
        <div class="row justify-content-center">
            <% categories.forEach((category) => { %>
                <div class="col-md-2 col-12 mb-3 justify-content-cen">
                    <div class="card custom-card mx-auto">
                        <a href="/categories/<%= category.id %>/products">
                            <div class="img-category">
                                <img src="http://localhost:3000/assets/<%= category.photo %>" class="card-img-top" alt="<%= category.name %>">
                            </div>
                        </a>
                            <div class="card-body">
                                <h5 class="card-title text-center"><%= category.name %></h5>
                            </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            </ul>
            <p class="text-center text-body-secondary">Di Buat Dengan Cinta &copy; 2023</p>
        </footer>
    </div>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</body>
</html>
